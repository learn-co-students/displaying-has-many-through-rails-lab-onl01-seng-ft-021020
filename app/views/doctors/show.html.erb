<h1><%= @doctor.name %></h1>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>
<% @doctor.appointments.each do |appt| %>
    <p>Date/Time: <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></p>
    <p>Patient: <%= link_to appt.patient.name, appt.patient %></p>
<% end %>